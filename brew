#!/bin/bash

sudo -v # ask for password only at the beginning

brew update
brew upgrade

brew install bash
echo "/usr/local/bin/bash" | sudo tee -a /etc/shells
chsh -s /usr/local/bin/bash

brew install git \
    bash-completion \
    nvm \
    go \
    wget \
    ondir \
    hub \
    ccat \
    ag \
    tree \
    m-cli

brew cask install sublime-text \
    atom \
    webstorm \
    iterm2 \
    gitx \
    xscope \
    mou \
    transmit

brew cask install yandex \
    chromium \
    firefox

brew cask install adium \
    skype \
    teamviewer \
    yandexdisk \
    dropbox \
    evernote \
    transmission \
    vlc \
    appzapper \
    imageoptim \
    imagealpha \
    spectacle \
    apptivate \
    clipmenu

brew cleanup
