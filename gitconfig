[user]
    name = tenorok
    email = mail@tenorok.ru
[core]
    editor = vim
    excludesfile = ~/.gitignore
    quotepath = false
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = cyan
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[diff]
    noprefix = true
[merge]
    ff = no
[branch]
    autosetuprebase = always
[alias]
    cp = cherry-pick
    st = status -s
    stc = diff --name-only --diff-filter=U
    cl = clone
    ci = commit
    co = checkout
    br = branch
    dc = diff --cached
    ls = ls-files
    unstage = reset HEAD --
    last = log -1 HEAD
    back = reset --soft HEAD^
    brup = remote prune origin
    cleanup = clean -xdf
    gcls = fsck
    gcup = gc --prune=now
    ignore = update-index --assume-unchanged
    unignore = update-index --no-assume-unchanged
    lsi = !git ls-files -v | grep '^h'
    lg  = log --oneline --graph --decorate
    lga  = log --oneline --graph --decorate --all
    lgp = log --oneline --graph --decorate --all --simplify-by-decoration
[filter "lfs"]
    required = true
    clean = git-lfs clean %f
    smudge = git-lfs smudge --skip %f
[lfs]
    batch = true
    concurrenttransfers = 15
[push]
	default = simple
